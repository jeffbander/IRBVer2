# ==============================================================================
# DEVELOPMENT ENVIRONMENT CONFIGURATION
# ==============================================================================
# This file shows example configuration for local development
# Copy to .env and modify as needed
# ==============================================================================

# ------------------------------------------------------------------------------
# DATABASE (SQLite for development)
# ------------------------------------------------------------------------------
DATABASE_URL="file:./dev.db"

# For PostgreSQL development (optional):
# DATABASE_URL="postgresql://user:password@localhost:5432/irb_dev?schema=public"

# ------------------------------------------------------------------------------
# AUTHENTICATION & SECURITY
# ------------------------------------------------------------------------------
# JWT Secret - use a strong random string in production
# Generate with: openssl rand -base64 64
JWT_SECRET="change-me-in-production-use-long-random-string"
JWT_EXPIRES_IN="7d"

# Bcrypt rounds (10 for dev, 12 for production)
BCRYPT_ROUNDS="10"

# Session secret (if using express-session)
SESSION_SECRET="change-me-in-production"
SESSION_MAX_AGE="86400000"

# ------------------------------------------------------------------------------
# APPLICATION
# ------------------------------------------------------------------------------
NODE_ENV="development"
PORT="3001"
BASE_URL="http://localhost:3001"

# ------------------------------------------------------------------------------
# RATE LIMITING (Enable in production)
# ------------------------------------------------------------------------------
RATE_LIMIT_MAX="100"
RATE_LIMIT_WINDOW_MS="900000"

# ------------------------------------------------------------------------------
# LOGGING
# ------------------------------------------------------------------------------
LOG_LEVEL="debug"
LOG_FORMAT="text"

# ------------------------------------------------------------------------------
# FILE UPLOAD
# ------------------------------------------------------------------------------
MAX_FILE_SIZE_MB="10"
UPLOAD_DIR="./uploads"

# Cloud Storage (for production)
# GCS_BUCKET_NAME="your-bucket-name"
# GCS_PROJECT_ID="your-gcp-project-id"

# ------------------------------------------------------------------------------
# AIGENTS AI INTEGRATION
# ------------------------------------------------------------------------------
AIGENTS_API_URL="https://start-chain-run-943506065004.us-central1.run.app"
AIGENTS_EMAIL="notifications@providerloop.com"
AIGENTS_WEBHOOK_SECRET="your-webhook-secret-here"
AIGENTS_FOLDER_ID="your-folder-id-here"

# Set to 'true' for local development to use mock responses
USE_AIGENTS_MOCK="true"

# ------------------------------------------------------------------------------
# EMAIL (Optional - for notifications)
# ------------------------------------------------------------------------------
# SMTP Configuration
# SMTP_HOST="smtp.gmail.com"
# SMTP_PORT="587"
# SMTP_SECURE="false"
# SMTP_USER="your-email@gmail.com"
# SMTP_PASS="your-app-password"
# SMTP_FROM="noreply@localhost"

# ------------------------------------------------------------------------------
# CORS CONFIGURATION (Optional)
# ------------------------------------------------------------------------------
# CORS_ORIGIN="http://localhost:3000,http://localhost:3001"

# ------------------------------------------------------------------------------
# NEXT.JS
# ------------------------------------------------------------------------------
NEXT_TELEMETRY_DISABLED="1"

# ------------------------------------------------------------------------------
# DEPLOYMENT PLATFORMS
# ------------------------------------------------------------------------------
# For Firebase Functions: firebase functions:config:set
# For Netlify: Set in dashboard > Site settings > Environment variables
# For Vercel: Set in dashboard > Settings > Environment Variables
# For Cloud Run: Use GCP Secret Manager

# ------------------------------------------------------------------------------
# PRODUCTION NOTES
# ------------------------------------------------------------------------------
# For production deployment, see .env.production.example
# Never commit .env files to version control!
# Use Secret Manager for sensitive values in production
