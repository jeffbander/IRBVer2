# Database
DATABASE_URL="file:./dev.db"

# Authentication
JWT_SECRET="change-me-in-production-use-long-random-string"
JWT_EXPIRES_IN="7d"

# Security
BCRYPT_ROUNDS="10"

# Application
NODE_ENV="development"
PORT="3001"
BASE_URL="http://localhost:3001"

# Rate Limiting (production)
# RATE_LIMIT_MAX="100"
# RATE_LIMIT_WINDOW_MS="900000"

# Logging
# LOG_LEVEL="info"

# Email (optional, for notifications)
# SMTP_HOST=""
# SMTP_PORT=""
# SMTP_USER=""
# SMTP_PASS=""
# SMTP_FROM=""

# File Upload
MAX_FILE_SIZE_MB="10"
UPLOAD_DIR="./uploads"

# Aigents AI Integration
AIGENTS_API_URL="https://start-chain-run-943506065004.us-central1.run.app"
AIGENTS_EMAIL="notifications@providerloop.com"
AIGENTS_WEBHOOK_SECRET="your-webhook-secret-here"
AIGENTS_FOLDER_ID="your-folder-id-here"  # Required: AppSheet folder ID for chain runs (ChainRun_Chain_Link)
# Set to 'true' for local development to use mock responses
USE_AIGENTS_MOCK="true"

# Session (if using express-session)
# SESSION_SECRET="change-me-in-production"
# SESSION_MAX_AGE="86400000"

# Production PostgreSQL example
# DATABASE_URL="postgresql://user:password@localhost:5432/irb_production?schema=public"

# CORS Configuration (Optional)
# CORS_ORIGIN="https://yourdomain.com"

