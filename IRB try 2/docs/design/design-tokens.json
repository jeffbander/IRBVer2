{
  "$schema": "https://schemas.figma.com/plugin/design-tokens/v1.0.0",
  "name": "Mount Sinai IRB Design System",
  "version": "1.0.0",
  "colors": {
    "brand": {
      "primary": {
        "$type": "color",
        "$value": "#06ABEB",
        "$description": "Vivid Cerulean - Primary blue for CTAs, interactive elements, links"
      },
      "primary-hover": {
        "$type": "color",
        "$value": "#0891C7",
        "$description": "Darker blue for hover states"
      },
      "accent": {
        "$type": "color",
        "$value": "#DC298D",
        "$description": "Barbie Pink - For secondary CTAs, highlights, notifications"
      },
      "heading": {
        "$type": "color",
        "$value": "#212070",
        "$description": "St. Patrick's Blue - Headers, navigation, authority elements"
      },
      "navy": {
        "$type": "color",
        "$value": "#00002D",
        "$description": "Cetacean Blue - Text, footer, high-contrast elements"
      }
    },
    "text": {
      "primary": {
        "$type": "color",
        "$value": "#111827",
        "$description": "Gray 900 - Primary text color"
      },
      "secondary": {
        "$type": "color",
        "$value": "#4B5563",
        "$description": "Gray 600 - Secondary text color"
      },
      "tertiary": {
        "$type": "color",
        "$value": "#9CA3AF",
        "$description": "Gray 400 - Tertiary/disabled text"
      },
      "inverse": {
        "$type": "color",
        "$value": "#FFFFFF",
        "$description": "White text on dark backgrounds"
      }
    },
    "background": {
      "primary": {
        "$type": "color",
        "$value": "#FFFFFF",
        "$description": "White - Primary background"
      },
      "secondary": {
        "$type": "color",
        "$value": "#F9FAFB",
        "$description": "Gray 50 - Secondary background"
      },
      "tertiary": {
        "$type": "color",
        "$value": "#F3F4F6",
        "$description": "Gray 100 - Tertiary background"
      }
    },
    "border": {
      "default": {
        "$type": "color",
        "$value": "#E5E7EB",
        "$description": "Gray 200 - Default border color"
      },
      "focus": {
        "$type": "color",
        "$value": "#06ABEB",
        "$description": "Primary blue - Focus state border"
      },
      "error": {
        "$type": "color",
        "$value": "#EF4444",
        "$description": "Red - Error state border"
      },
      "success": {
        "$type": "color",
        "$value": "#10B981",
        "$description": "Green - Success state border"
      }
    },
    "status": {
      "success": {
        "$type": "color",
        "$value": "#10B981",
        "$description": "Green - Success, approvals, completed"
      },
      "warning": {
        "$type": "color",
        "$value": "#F59E0B",
        "$description": "Amber - Warnings, pending reviews"
      },
      "error": {
        "$type": "color",
        "$value": "#EF4444",
        "$description": "Red - Errors, rejections, critical alerts"
      },
      "info": {
        "$type": "color",
        "$value": "#06ABEB",
        "$description": "Blue - Informational messages"
      }
    },
    "semantic": {
      "draft-bg": {
        "$type": "color",
        "$value": "#F3F4F6",
        "$description": "Gray 100 - Draft status background"
      },
      "draft-text": {
        "$type": "color",
        "$value": "#1F2937",
        "$description": "Gray 800 - Draft status text"
      },
      "pending-bg": {
        "$type": "color",
        "$value": "#FEF3C7",
        "$description": "Amber 100 - Pending status background"
      },
      "pending-text": {
        "$type": "color",
        "$value": "#92400E",
        "$description": "Amber 800 - Pending status text"
      },
      "approved-bg": {
        "$type": "color",
        "$value": "#D1FAE5",
        "$description": "Green 100 - Approved status background"
      },
      "approved-text": {
        "$type": "color",
        "$value": "#065F46",
        "$description": "Green 800 - Approved status text"
      },
      "active-bg": {
        "$type": "color",
        "$value": "#DBEAFE",
        "$description": "Blue 100 - Active status background"
      },
      "active-text": {
        "$type": "color",
        "$value": "#1E40AF",
        "$description": "Blue 800 - Active status text"
      },
      "rejected-bg": {
        "$type": "color",
        "$value": "#FEE2E2",
        "$description": "Red 100 - Rejected status background"
      },
      "rejected-text": {
        "$type": "color",
        "$value": "#991B1B",
        "$description": "Red 800 - Rejected status text"
      }
    },
    "gray": {
      "50": {
        "$type": "color",
        "$value": "#F9FAFB"
      },
      "100": {
        "$type": "color",
        "$value": "#F3F4F6"
      },
      "200": {
        "$type": "color",
        "$value": "#E5E7EB"
      },
      "300": {
        "$type": "color",
        "$value": "#D1D5DB"
      },
      "400": {
        "$type": "color",
        "$value": "#9CA3AF"
      },
      "500": {
        "$type": "color",
        "$value": "#6B7280"
      },
      "600": {
        "$type": "color",
        "$value": "#4B5563"
      },
      "700": {
        "$type": "color",
        "$value": "#374151"
      },
      "800": {
        "$type": "color",
        "$value": "#1F2937"
      },
      "900": {
        "$type": "color",
        "$value": "#111827"
      }
    }
  },
  "typography": {
    "fontFamily": {
      "base": {
        "$type": "fontFamily",
        "$value": "Inter, -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, sans-serif"
      }
    },
    "fontSize": {
      "display": {
        "$type": "dimension",
        "$value": "60px"
      },
      "h1": {
        "$type": "dimension",
        "$value": "36px"
      },
      "h2": {
        "$type": "dimension",
        "$value": "30px"
      },
      "h3": {
        "$type": "dimension",
        "$value": "24px"
      },
      "h4": {
        "$type": "dimension",
        "$value": "20px"
      },
      "body-large": {
        "$type": "dimension",
        "$value": "18px"
      },
      "body": {
        "$type": "dimension",
        "$value": "16px"
      },
      "body-small": {
        "$type": "dimension",
        "$value": "14px"
      },
      "caption": {
        "$type": "dimension",
        "$value": "12px"
      },
      "overline": {
        "$type": "dimension",
        "$value": "11px"
      }
    },
    "lineHeight": {
      "display": {
        "$type": "dimension",
        "$value": "72px"
      },
      "h1": {
        "$type": "dimension",
        "$value": "44px"
      },
      "h2": {
        "$type": "dimension",
        "$value": "38px"
      },
      "h3": {
        "$type": "dimension",
        "$value": "32px"
      },
      "h4": {
        "$type": "dimension",
        "$value": "28px"
      },
      "body-large": {
        "$type": "dimension",
        "$value": "28px"
      },
      "body": {
        "$type": "dimension",
        "$value": "24px"
      },
      "body-small": {
        "$type": "dimension",
        "$value": "20px"
      },
      "caption": {
        "$type": "dimension",
        "$value": "16px"
      },
      "overline": {
        "$type": "dimension",
        "$value": "16px"
      }
    },
    "fontWeight": {
      "regular": {
        "$type": "number",
        "$value": 400
      },
      "medium": {
        "$type": "number",
        "$value": 500
      },
      "semibold": {
        "$type": "number",
        "$value": 600
      },
      "bold": {
        "$type": "number",
        "$value": 700
      }
    },
    "letterSpacing": {
      "tight": {
        "$type": "dimension",
        "$value": "-0.5px"
      },
      "normal": {
        "$type": "dimension",
        "$value": "0px"
      },
      "wide": {
        "$type": "dimension",
        "$value": "0.5px"
      }
    }
  },
  "spacing": {
    "1": {
      "$type": "dimension",
      "$value": "4px",
      "$description": "2xs"
    },
    "2": {
      "$type": "dimension",
      "$value": "8px",
      "$description": "xs"
    },
    "3": {
      "$type": "dimension",
      "$value": "12px",
      "$description": "sm"
    },
    "4": {
      "$type": "dimension",
      "$value": "16px",
      "$description": "md"
    },
    "5": {
      "$type": "dimension",
      "$value": "20px",
      "$description": "lg"
    },
    "6": {
      "$type": "dimension",
      "$value": "24px",
      "$description": "xl"
    },
    "8": {
      "$type": "dimension",
      "$value": "32px",
      "$description": "2xl"
    },
    "10": {
      "$type": "dimension",
      "$value": "40px",
      "$description": "3xl"
    },
    "12": {
      "$type": "dimension",
      "$value": "48px",
      "$description": "4xl"
    },
    "16": {
      "$type": "dimension",
      "$value": "64px",
      "$description": "5xl"
    }
  },
  "borderRadius": {
    "sm": {
      "$type": "dimension",
      "$value": "6px"
    },
    "md": {
      "$type": "dimension",
      "$value": "8px"
    },
    "lg": {
      "$type": "dimension",
      "$value": "12px"
    },
    "xl": {
      "$type": "dimension",
      "$value": "16px"
    },
    "full": {
      "$type": "dimension",
      "$value": "9999px"
    }
  },
  "borderWidth": {
    "thin": {
      "$type": "dimension",
      "$value": "1px"
    },
    "medium": {
      "$type": "dimension",
      "$value": "2px"
    },
    "thick": {
      "$type": "dimension",
      "$value": "3px"
    }
  },
  "shadows": {
    "sm": {
      "$type": "shadow",
      "$value": {
        "offsetX": "0px",
        "offsetY": "1px",
        "blur": "2px",
        "spread": "0px",
        "color": "rgba(0, 0, 0, 0.05)"
      }
    },
    "md": {
      "$type": "shadow",
      "$value": {
        "offsetX": "0px",
        "offsetY": "2px",
        "blur": "8px",
        "spread": "0px",
        "color": "rgba(0, 0, 0, 0.1)"
      }
    },
    "lg": {
      "$type": "shadow",
      "$value": {
        "offsetX": "0px",
        "offsetY": "4px",
        "blur": "16px",
        "spread": "0px",
        "color": "rgba(0, 0, 0, 0.12)"
      }
    },
    "xl": {
      "$type": "shadow",
      "$value": {
        "offsetX": "0px",
        "offsetY": "8px",
        "blur": "24px",
        "spread": "0px",
        "color": "rgba(0, 0, 0, 0.15)"
      }
    },
    "2xl": {
      "$type": "shadow",
      "$value": {
        "offsetX": "0px",
        "offsetY": "16px",
        "blur": "48px",
        "spread": "0px",
        "color": "rgba(0, 0, 0, 0.2)"
      }
    },
    "focus": {
      "$type": "shadow",
      "$value": {
        "offsetX": "0px",
        "offsetY": "0px",
        "blur": "0px",
        "spread": "3px",
        "color": "rgba(6, 171, 235, 0.1)"
      }
    }
  },
  "size": {
    "button-height": {
      "$type": "dimension",
      "$value": "44px"
    },
    "input-height": {
      "$type": "dimension",
      "$value": "44px"
    },
    "icon-sm": {
      "$type": "dimension",
      "$value": "16px"
    },
    "icon-md": {
      "$type": "dimension",
      "$value": "20px"
    },
    "icon-lg": {
      "$type": "dimension",
      "$value": "24px"
    },
    "touch-target": {
      "$type": "dimension",
      "$value": "44px",
      "$description": "Minimum accessible touch target size"
    }
  }
}
