{
  "name": "irb-management-system",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "prisma generate && next build",
    "start": "next start",
    "lint": "next lint",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest run --coverage",
    "test:e2e": "playwright test",
    "deploy:firebase": "npm run build && firebase deploy",
    "deploy:vercel": "vercel --prod",
    "deploy:cloudrun": "gcloud builds submit --config cloudbuild.yaml",
    "postinstall": "prisma generate",
    "tunnel": "node ngrok-manager.js start all",
    "tunnel:irb": "node ngrok-manager.js start irb",
    "tunnel:heartvoice": "node ngrok-manager.js start heartvoice",
    "tunnel:status": "node ngrok-manager.js status",
    "tunnel:stop": "node ngrok-manager.js stop",
    "tunnel:restart": "node ngrok-manager.js restart"
  },
  "dependencies": {
    "@anthropic-ai/sdk": "^0.65.0",
    "@mistralai/mistralai": "^1.10.0",
    "@prisma/client": "^6.16.2",
    "bcryptjs": "^3.0.2",
    "jsonwebtoken": "^9.0.2",
    "next": "14.2.5",
    "pdf-parse": "^2.2.9",
    "pdf2pic": "^3.2.0",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "sharp": "^0.34.4",
    "sonner": "^2.0.7",
    "tesseract.js": "^6.0.1",
    "zustand": "^4.5.0"
  },
  "devDependencies": {
    "@playwright/test": "^1.55.1",
    "@types/bcryptjs": "^2.4.6",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/node": "^20.19.18",
    "@types/react": "^18",
    "@types/react-dom": "^18",
    "@vitest/coverage-v8": "^1.6.0",
    "@vitest/ui": "^1.6.0",
    "autoprefixer": "^10.4.19",
    "eslint": "^8",
    "eslint-config-next": "14.2.5",
    "happy-dom": "^14.12.0",
    "postcss": "^8.4.39",
    "prisma": "^6.16.2",
    "tailwindcss": "^3.4.6",
    "typescript": "^5",
    "vitest": "^1.6.0"
  }
}
